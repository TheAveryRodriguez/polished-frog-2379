<h1><%= "Doctor #{@doctor.id} Show Page" %></h1>

<section id="doctor-info"
    <p>Name: <%= @doctor.name %></p>
    <p>Specialty: <%= @doctor.specialty %></p>
    <p>University: <%= @doctor.university %></p>
    <p>Hospital Attending: <%= @doctor.hospital.name %></p>
  <br>  

</section>

<section id="doctors-patients"
  <h3> <%= "Patients:" %></h3>
  <% @doctor.patients.each do |patient| %>
    <p><%= patient.name %></p>

    <p><%= button_to "Remove #{patient.name} from caseload", "/doctors/#{@doctor.id}/patients/#{patient.id}", method: :delete, data: { turbo: false } %></p>

  <% end %>
</section>